<section class="scroll-mt-16 h-screen" id="contact-form">
	<div class="px-4 py-16 mx-auto max-w-6xl lg:px-8 lg:py-20">
		<h1 class="sm:text-md md:text-2xl text-center">Contact Me!</h1>
<form id="form" onsubmit="event => event.preventDefault(); return false" class="mb-8">
	<fieldset class="mb-4">
	  <label for="name" class="block mb-2">
		Name<sup>*</sup>
	  </label>
	  <input
		type="text"
		id="name"
		name="name"
		class="w-full px-4 py-2 border  rounded-md focus:outline-none dark:bg-slate-500 dark:border-black dark:text-white text-black bg-opacity-25"
		placeholder="Your name"
		required
	  />
	</fieldset>
	<fieldset class="mb-4">
	  <label for="email" class="block mb-2">
		Email<sup>*</sup>
	  </label>
	  <input
		type="email"
		id="email"
		name="email"
		class="w-full px-4 py-2 border text-black rounded-md focus:outline-none dark:border-black dark:text-white dark:bg-slate-500 dark bg-opacity-25"
		placeholder="Your email"
		required
	  />
	</fieldset>
	<fieldset class="mb-4">
	  <label for="message" class="block mb-2">
		Message
	  </label>
	  <textarea
		id="message"
		name="message"
		class="w-full px-4 py-2 border border-gray-300 text-black rounded-md focus:outline-none dark:border-black dark:text-white dark:bg-slate-500"
		rows="4"
		placeholder="Your message"
		required
	  ></textarea>
	</fieldset>
	<button
	  type="submit"
	  class="mt-4 bg-blue-600 w-full text-white px-4 py-2 rounded-md transition-colors duration-300 hover:bg-blue-700"
	>
	  Submit
	</button>
	<!-- Response message goes here -->
  </form>
</div>
</section>
  